{
  "name": "SecretKit",
  "summary": "Rapid app development classes for iOS and OSX.",
  "version": "0.1.7",
  "platforms": {
    "ios": "10.0",
    "osx": "10.12"
  },
  "requires_arc": true,
  "license": {
    "type": "MIT",
    "file": "LICENSE"
  },
  "authors": {
    "Colin Caufield": "cjcaufield@gmail.com"
  },
  "homepage": "https://github.com/cjcaufield/SecretKit",
  "source": {
    "git": "https://github.com/cjcaufield/SecretKit.git",
    "tag": "0.1.7"
  },
  "ios": {
    "frameworks": [
      "UIKit",
      "CoreData"
    ],
    "exclude_files": "**/osx/**/*.*",
    "resources": "SecretKit/**/*.{png,jpeg,jpg,storyboard,xib}"
  },
  "osx": {
    "frameworks": [
      "Cocoa",
      "CoreData"
    ],
    "exclude_files": "**/ios/**/*.*"
  },
  "source_files": "SecretKit/**/*.{swift}"
}
